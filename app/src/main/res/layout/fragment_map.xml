<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_current_user_stories"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/user_stories_options_bg"
        android:visibility="gone">
        <!--app:behavior_hideable="true"
        app:behavior_peekHeight="120dp"
        app:layout_behavior="@string/bottom_sheet_behavior"-->
        <TextView
            android:id="@+id/tv_map_name"
            android:maxLines="2"
            android:layout_marginHorizontal="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/users_stories"
            android:fontFamily="@font/poppins_black"
            android:textSize="18sp"
            android:textColor="@color/black"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_map_story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            tools:listitem="@layout/item_current_users_stories"
            android:clipToPadding="false"
            android:paddingBottom="60dp"/>
    </LinearLayout>
</FrameLayout>
